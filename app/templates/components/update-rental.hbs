{{#if updateRentalForm}}
  <h4>Update {{rental.owner}}'s {{rental.type}}</h4>
    <div>
      <form>
        <div class="form-group">
          <label for="owner">Owner</label>
          {{input value=owner class="form-control" id="owner" placeholder=rental.owner}}
        </div>

        <div class="form-group">
          <label for="type">Type</label>
          {{input value=type class="form-control" id="type" placeholder=rental.type}}
        </div>

        {{!-- <div class="form-group">
          <label for="city">City: (currently {{rental.city.name}})</label>
          {{#x-select class="form-control" value=rental.city action="selectCity"}}
            <option></option>
            {{#each cities as |city|}}
              {{#x-option value=city}} {{city.name}} {{/x-option}}
            {{/each}}
          {{/x-select}}

        </div> --}}

        <div class="form-group">
          <label for="bedrooms">Number of Bedrooms</label>
          {{input value=bedrooms class="form-control" id="bedrooms" placeholder=rental.bedrooms}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image class="form-control" id="image" placeholder=rental.image}}
        </div>

        <div class="form-group">
          <label for="cost">Cost</label>
          {{input value=cost class="form-control" id="cost" placeholder=rental.cost}}
        </div>

        <button {{action 'update' rental}} class="btn btn-primary">Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'updateRentalForm'}} class="btn btn-default btn-xs">Update</button>
{{/if}}
